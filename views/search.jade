header.bar-title
  a.button-prev(href='javascript:window.history.back();') Back
  h1.title Search
  a.button(href='/playlists') Playlists

.bar-standard.bar-header-secondary
    input(type='search', placeholder='Search', ng-change='search()', ng-model='searchbox')

.content
  ul.list
    li.track.list-item(ng-repeat='track in results.data')
      a(href='javascript:;', ng-click='viewTrack(track)')
        span.list-title {{ track.title }}
        .artist-album
          span.artist {{track.artist}}
          span.hyphen(ng-show='track.album') &nbsp;-&nbsp;
          span.album {{track.album}}
        span.chevron